{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "php",
        "request": "launch",
        "name": "Launch with XDebug",
        "ignore": [
          "**/vendor/**/*.php"
        ]
      },
      {
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "name": "Launch with Firefox Debugger",
        "url": "http://localhost/",
        "webRoot": "${workspaceFolder}",
        "pathMappings": [
          {
            "url": "webpack:///",
            "path": "${workspaceFolder}/"
          }
        ]
      }
    ]
}
